--- const logo = "/logo.png"; const heroSlides = ["/sous.jpg", "/sous1.jpg", "/sous2.jpg"]; ---
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Smile Lab – Blanchiment Dentaire</title>
    <meta
        name="description"
        content="Blanchiment dentaire américain à Mons. Produits vegan & cruelty-free, formule douce non agressive, résultats visibles dès la première séance, à domicile."
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
        href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=Playfair+Display:wght@500;600;700&display=swap"
        rel="stylesheet"
    />
</head>
<style>
    :root {
        --bg-page: #f7eedc;
        --bg-section: #fbf5eb;
        --marron: #b58b57;
        --marron-soft: #a67c52;
        --texte: #8c6239;
        --white: #ffffff;
    }

    * {
        box-sizing: border-box;
    }

    body {
        margin: 0;
        font-family: Inter, sans-serif;
        background: var(--bg-page);
        color: var(--texte);
        scroll-behavior: smooth;
    }
    
    /* Empêche le défilement du contenu quand le menu est ouvert */
    body.menu-open {
        overflow: hidden; 
    }

    a {
        color: inherit;
        text-decoration: none;
    }

    /* HEADER */
    header {
        position: sticky;
        top: 0;
        z-index: 100; /* Augmenté pour être au-dessus du menu overlay */
        background: var(--bg-section);
        border-bottom: 1px solid rgba(0, 0, 0, 0.04);
    }

    .topbar {
        max-width: 1100px;
        margin: 0 auto;
        padding: 14px 20px;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .logo-wrap {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .logo-wrap img {
        height: 52px;
    }

    .logo-text {
        font-family: "Playfair Display", serif;
        font-size: 18px;
        color: var(--marron);
        line-height: 1.1;
    }
    
    /* Styles de navigation par défaut (desktop) */
    nav.main-nav {
        display: flex;
        gap: 20px;
        font-size: 15px;
    }

    nav a {
        position: relative;
        padding-bottom: 2px;
    }

    nav a::after {
        content: "";
        position: absolute;
        width: 0;
        left: 0;
        bottom: -2px;
        height: 2px;
        background: var(--marron);
        transition: 0.2s;
    }

    nav a:hover::after {
        width: 100%;
    }
    
    /* NOUVEAU: Hamburger Toggle (caché par défaut) */
    .menu-toggle {
        display: none; /* Caché sur desktop */
        padding: 10px;
        background: none;
        border: none;
        cursor: pointer;
        /* Aligne l'icône sur la droite du logo */
        margin-left: auto; 
    }
    .bar {
        display: block;
        width: 25px;
        height: 3px;
        margin: 5px 0;
        background-color: var(--marron);
        transition: 0.3s;
    }


    /* HERO (Reste inchangé pour la lisibilité) */
    #hero {
        padding: 50px 20px;
    }
    .hero-inner {
        max-width: 1100px;
        margin: 0 auto;
    }
    .hero-slider {
        height: 360px;
        border-radius: 20px;
        overflow: hidden;
        position: relative;
        box-shadow: 0 12px 28px rgba(0, 0, 0, 0.08);
    }
    .hero-slide {
        position: absolute;
        inset: 0;
        opacity: 0;
        transition: opacity 0.7s ease;
    }
    .hero-slide.active {
        opacity: 1;
    }
    .hero-slide img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    .hero-overlay {
        position: absolute;
        inset: 0;
        padding: 40px;
        background: linear-gradient(
            to right,
            rgba(247, 238, 220, 0.9),
            rgba(247, 238, 220, 0.2)
        );
        display: flex;
        align-items: center;
    }
    .hero-title {
        font-family: "Playfair Display", serif;
        font-size: 32px;
        color: var(--marron);
        margin-bottom: 10px;
    }
    .hero-subtitle {
        font-size: 15px;
        margin-bottom: 20px;
    }
    .hero-btns {
        display: flex;
        gap: 12px;
        flex-wrap: wrap;
    }
    .btn-primary,
    .btn-ghost {
        padding: 11px 20px;
        border-radius: 999px;
        font-size: 14px;
        font-weight: 600;
    }
    .btn-primary {
        background: var(--marron);
        color: white;
        box-shadow: 0 6px 14px rgba(0, 0, 0, 0.2);
    }
    .btn-ghost {
        background: white;
        border: 1px solid rgba(0, 0, 0, 0.1);
        color: var(--marron-soft);
    }
    /* TITRES (Reste inchangé) */
    .section-title {
        font-family: "Playfair Display", serif;
        font-size: 30px;
        color: var(--marron);
        text-align: center;
        margin-bottom: 20px;
    }
    .section-sub {
        text-align: center;
        max-width: 700px;
        margin: 0 auto 40px;
    }
    /* POURQUOI NOUS (Reste inchangé) */
    #pourquoi {
        padding: 80px 20px;
        background: var(--bg-section);
    }
    .section-inner {
        max-width: 1100px;
        margin: 0 auto;
    }
    .why-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 22px;
    }
    .why-card {
        background: white;
        padding: 22px;
        border-radius: 14px;
        box-shadow: 0 8px 18px rgba(0, 0, 0, 0.05);
    }
    .why-tag {
        color: var(--marron-soft);
        font-weight: 600;
        margin-bottom: 6px;
    }
    .why-title {
        color: var(--marron);
        font-weight: 700;
        margin-bottom: 8px;
    }
    /* PRESTATIONS (Reste inchangé) */
    #prestations {
        padding: 80px 20px;
    }
    .prestations-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 22px;
    }
    .presta-card {
        background: var(--bg-section);
        padding: 22px;
        border-radius: 16px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.05);
    }
    .presta-title {
        font-weight: 700;
        color: var(--marron);
    }
    .presta-price {
        margin-top: 10px;
        font-size: 22px;
        color: var(--marron-soft);
        font-weight: 700;
    }
    /* AVANT / APRÈS (Reste inchangé) */
    #avant-apres {
        padding: 80px 20px;
        background: var(--bg-section);
    }
    .before-after-wrapper {
        max-width: 1100px;
        margin: 0 auto;
    }
    .ba-columns {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 26px;
    }
    .ba-col-title {
        font-family: "Playfair Display", serif;
        text-align: center;
        font-size: 18px;
        color: var(--marron);
        margin-bottom: 10px;
    }
    .ba-col-img {
        width: 100%;
        max-height: 230px;
        object-fit: cover;
        border-radius: 14px;
        margin-bottom: 16px;
        box-shadow: 0 6px 14px rgba(0, 0, 0, 0.08);
    }
    /* CONTACT (Reste inchangé) */
    #contact {
        padding: 80px 20px;
    }
    .contact-text {
        max-width: 700px;
        margin: 0 auto 24px;
        text-align: center;
    }
    .contact-actions {
        display: flex;
        justify-content: center;
        gap: 12px;
        margin-bottom: 16px;
        flex-wrap: wrap;
    }
    .contact-note {
        text-align: center;
        font-size: 14px;
        opacity: 0.8;
    }
    /* FOOTER (Reste inchangé) */
    footer {
        background: var(--bg-section);
        padding: 40px 20px;
        text-align: center;
    }
    .footer-inner {
        max-width: 1100px;
        margin: 0 auto;
    }
    .footer-logo img {
        height: 34px;
        margin-bottom: 6px;
    }
    .footer-links {
        display: flex;
        justify-content: center;
        gap: 16px;
        margin: 10px 0;
    }
    .footer-madeby {
        font-size: 12px;
        opacity: 0.6;
    }

    /* RESPONSIVE OPTIMISÉ POUR LE MENU HAMBURGER */

    /* Tablette et Mobile (<= 900px) */
    @media (max-width: 900px) {
        /* Affiche le bouton hamburger et cache la nav classique */
        nav.main-nav {
            display: none;
        }
        .menu-toggle {
            display: block;
        }
        
        /* Layout des éléments principaux */
        .why-grid,
        .prestations-grid,
        .ba-columns {
            grid-template-columns: 1fr;
        }

        #pourquoi,
        #prestations,
        #avant-apres,
        #contact {
            padding: 60px 20px;
        }
        
        /* Style du menu OUVERT (quand body a la classe .menu-open) */
        body.menu-open nav.main-nav {
            display: flex;
            flex-direction: column;
            position: fixed;
            top: 0;
            right: 0;
            width: 100%;
            height: 100%;
            background: var(--bg-section);
            z-index: 90; /* Doit être au-dessus du contenu, mais sous le bouton toggle */
            padding: 100px 20px 20px;
            align-items: center;
            justify-content: flex-start;
            gap: 30px;
            font-size: 20px; /* Taille de police plus grande pour la navigation mobile */
            overflow-y: auto;
            transition: all 0.3s ease-in-out;
        }
        
        /* Animation du hamburger en croix (X) */
        body.menu-open .menu-toggle .bar:nth-child(2) {
            opacity: 0;
        }
        body.menu-open .menu-toggle .bar:nth-child(1) {
            transform: translateY(8px) rotate(45deg);
        }
        body.menu-open .menu-toggle .bar:nth-child(3) {
            transform: translateY(-8px) rotate(-45deg);
        }
    }

    /* Styles pour les petits téléphones (<= 550px) */
    @media (max-width: 550px) {
        .hero-slider {
            height: 300px;
        }

        .hero-overlay {
            padding: 30px;
        }

        .hero-title {
            font-size: 28px;
        }
        
        .section-title {
            font-size: 24px;
            margin-bottom: 15px;
        }
        
        .hero-btns, .contact-actions {
            flex-direction: column; 
        }
        
        .btn-primary, .btn-ghost {
            width: 100%; 
            text-align: center;
        }

        .ba-col-img {
            max-height: 200px;
        }
    }
</style>
<header>
