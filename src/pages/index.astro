---
// src/pages/index.astro
import Layout from "../layouts/Layout.astro";

const heroSlides = ["/sous.jpg", "/sous1.jpg", "/sous2.jpg"];

const beforeAfterPairs = [
  { before: "/before1a.jpg", after: "/after1a.jpg", desc: "Traitement standard (30 min)" },
  { before: "/before2b.jpg", after: "/after2b.jpg", desc: "Traitement intensif (60 min)" },
];
---

<Layout
  title="Shine Clinic – Accueil"
  description="Blanchiment dentaire professionnel pour un sourire éclatant et durable."
>

<style>
/* ================= TITRES ================= */

.section-title {
  font-size: 38px;
  font-weight: 700;
  text-align: center;
  margin-bottom: 12px;
}

.section-sub {
  text-align: center;
  font-size: 17px;
  max-width: 760px;
  margin: 0 auto 48px;
  opacity: 0.85;
}

/* ================= HERO ================= */

#hero {
  position: relative;
  height: 88vh;
  min-height: 520px;
  overflow: hidden;
}

.hero-slider {
  position: absolute;
  inset: 0;
}

.hero-slide {
  position: absolute;
  inset: 0;
  opacity: 0;
  transition: opacity 0.8s ease;
}

.hero-slide.active {
  opacity: 1;
}

.hero-slide img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.hero-overlay {
  position: absolute;
  inset: 0;
  display: flex;
  align-items: flex-end;
  padding: 36px var(--section-padding-x) 56px;
  background: linear-gradient(
    to top,
    rgba(0,0,0,0.8) 25%,
    rgba(0,0,0,0.55) 50%,
    rgba(0,0,0,0.15) 75%,
    transparent
  );
  z-index: 5;
}

.hero-content {
  max-width: 640px;
}

.hero-title {
  color: white;
  font-size: 34px;
  line-height: 1.1;
  margin-bottom: 12px;
}

.hero-subtitle {
  color: rgba(255,255,255,0.9);
  font-size: 16px;
  margin-bottom: 24px;
}

.hero-btns {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.hero-btns a {
  width: 100%;
  text-align: center;
}

/* Desktop hero */
@media (min-width: 768px) {
  #hero {
    height: 92vh;
  }

  .hero-overlay {
    align-items: center;
    padding: 90px;
    background: linear-gradient(
      to right,
      rgba(0,0,0,0.65) 30%,
      rgba(0,0,0,0.25) 50%,
      transparent 65%
    );
  }

  .hero-title {
    font-size: 52px;
  }

  .hero-subtitle {
    font-size: 18px;
  }

  .hero-btns {
    flex-direction: row;
  }

  .hero-btns a {
    width: auto;
  }
}

/* ================= POURQUOI ================= */

#pourquoi {
  padding: var(--section-padding-y) 0;
}

.why-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 28px;
}

.why-card {
  background: white;
  padding: 28px;
  border-radius: 14px;
  box-shadow: 0 6px 20px rgba(0,0,0,0.06);
  font-weight: 600;
  font-size: 17px;
  text-align: center;
}

@media (max-width: 768px) {
  .why-grid {
    grid-template-columns: 1fr;
  }
}

/* ================= AVANT / APRÈS ================= */

#avant-apres {
  background: var(--color-secondary-bg);
  padding: var(--section-padding-y) 0;
}

.ba-gallery-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 26px;
}

.ba-gallery-card {
  background: white;
  border-radius: 16px;
  overflow: hidden;
  box-shadow: 0 10px 30px rgba(0,0,0,0.08);
}

.ba-image-container {
  position: relative;
  height: 300px;
}

.ba-image-container img {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  opacity: 0;
  transition: opacity 0.4s ease;
}

.ba-image-container img.active {
  opacity: 1;
}

.ba-toggle {
  position: absolute;
  bottom: 14px;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(0,0,0,0.7);
  color: white;
  border: none;
  padding: 9px 18px;
  font-size: 14px;
  border-radius: 22px;
  cursor: pointer;
}

/* Desktop interaction */
@media (min-width: 769px) {
  .ba-toggle {
    display: none;
  }

  .ba-image-container img {
    opacity: 1;
    width: 50%;
    transition: width 0.5s ease;
  }

  .img-before { left: 0; }
  .img-after { right: 0; }

  .ba-gallery-card:hover .img-before {
    width: 0;
  }

  .ba-gallery-card:hover .img-after {
    width: 100%;
  }
}

.ba-card-info {
  text-align: center;
  padding: 18px;
}

.ba-card-info h3 {
  font-size: 18px;
  font-weight: 700;
}

.ba-card-info p {
  color: var(--color-primary);
  font-size: 14px;
}

/* ================= CONTACT ================= */

#contact {
  padding: var(--section-padding-y) 0;
  text-align: center;
}

.contact-text {
  max-width: 600px;
  margin: 0 auto 30px;
  font-size: 18px;
}

.contact-actions {
  display: flex;
  gap: 16px;
  justify-content: center;
  flex-wrap: wrap;
}

@media (max-width: 768px) {
  .contact-actions {
    flex-direction: column;
  }

  .contact-actions a {
    width: 100%;
    max-width: 320px;
  }
}
</style>

<section id="hero">
  <div class="hero-slider">
    <div class="hero-overlay">
      <div class="hero-content">
        <h1 class="hero-title">
          Le blanchiment dentaire professionnel pour un sourire éclatant.
        </h1>
        <p class="hero-subtitle">
          Révélez votre sourire le plus lumineux dès la première séance.
        </p>
        <div class="hero-btns">
          <a href="#contact" class="btn-primary btn-base">Prendre rendez-vous</a>
          <a href="#avant-apres" class="btn-ghost btn-base">Voir nos résultats</a>
        </div>
      </div>
    </div>

    {heroSlides.map((img, index) => (
      <div class={`hero-slide ${index === 0 ? "active" : ""}`}>
        <img src={img} alt="Sourire éclatant" />
      </div>
    ))}
  </div>
</section>

<section id="pourquoi">
  <div class="section-inner">
    <h2 class="section-title">L'excellence au service de votre sourire</h2>
    <p class="section-sub">
      Des soins professionnels, sûrs et efficaces pour des résultats durables.
    </p>

    <div class="why-grid">
      <div class="why-card">Sûreté & douceur</div>
      <div class="why-card">Expertise professionnelle</div>
      <div class="why-card">Résultats visibles immédiatement</div>
    </div>
  </div>
</section>

<section id="avant-apres">
  <div class="section-inner">
    <h2 class="section-title">Nos transformations</h2>
    <p class="section-sub">
      Comparez avant et après nos soins.
    </p>

    <div class="ba-gallery-grid">
      {beforeAfterPairs.map(pair => (
        <div class="ba-gallery-card">
          <div class="ba-image-container">
            <img src={pair.after} class="img-after active" alt="Après blanchiment" />
            <img src={pair.before} class="img-before" alt="Avant blanchiment" />
            <button class="ba-toggle">Voir l’avant</button>
          </div>
          <div class="ba-card-info">
            <h3>Résultat garanti</h3>
            <p>{pair.desc}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<section id="contact">
  <div class="section-inner">
    <h2 class="section-title">Réservez votre moment Shine</h2>
    <p class="contact-text">
      Prêt(e) à illuminer votre sourire ? Réservez votre séance en ligne.
    </p>

    <div class="contact-actions">
      <a
        href="https://calendly.com/shineclinic/seance-de-blanchiment-dentaire"
        target="_blank"
        class="btn-primary btn-base"
      >
        Réserver en ligne
      </a>
      <a
        href="https://www.instagram.com/shine_clinic_instagram/"
        target="_blank"
        class="btn-ghost btn-base"
        style="color: var(--color-primary); border-color: var(--color-primary);"
      >
        Instagram
      </a>
    </div>
  </div>
</section>

<script is:inline>
/* Hero slider */
const slides = document.querySelectorAll(".hero-slide");
let idx = 0;
if (slides.length > 0) {
  slides[0].classList.add("active");
  setInterval(() => {
    slides[idx].classList.remove("active");
    idx = (idx + 1) % slides.length;
    slides[idx].classList.add("active");
  }, 6000);
}

/* Avant / Après toggle mobile */
document.querySelectorAll(".ba-gallery-card").forEach(card => {
  const btn = card.querySelector(".ba-toggle");
  const before = card.querySelector(".img-before");
  const after = card.querySelector(".img-after");

  btn.addEventListener("click", () => {
    const showingAfter = after.classList.contains("active");
    after.classList.toggle("active");
    before.classList.toggle("active");
    btn.textContent = showingAfter ? "Voir l’après" : "Voir l’avant";
  });
});
</script>

</Layout>





