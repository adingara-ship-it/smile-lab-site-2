---
// src/pages/index.astro
import Layout from "../layouts/Layout.astro";

const heroSlides = ["/sous.jpg", "/sous1.jpg", "/sous2.jpg"];

const beforeAfterPairs = [
  { before: "/before1a.jpg", after: "/after1a.jpg", desc: "Traitement standard (30 min)" },
  { before: "/before2b.jpg", after: "/after2b.jpg", desc: "Traitement intensif (60 min)" },
];
---

<Layout title="Shine Clinic – Accueil" description="Blanchiment dentaire professionnel pour un sourire éclatant et durable.">

<style>
/* ========================= */
/*      GLOBAL SECTIONS      */
/* ========================= */

.section-title {
  font-size: 40px;
  font-weight: 700;
  text-align: center;
  color: var(--color-text-title);
  margin-bottom: 10px;
}

.section-sub {
  text-align: center;
  font-size: 18px;
  max-width: 800px;
  margin: 0 auto 50px;
  opacity: 0.85;
}

/* ========================= */
/*          HERO             */
/* ========================= */

#hero {
  position: relative;
  width: 100%;
  height: 90vh;
  min-height: 520px;
  overflow: hidden;
}

/* Slider plein écran */
.hero-slider {
  position: absolute;
  inset: 0;
}

.hero-slide {
  position: absolute;
  inset: 0;
  opacity: 0;
  transition: opacity 0.8s ease;
}

.hero-slide.active {
  opacity: 1;
}

.hero-slide img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* Overlay sombre PREMIUM (FINI LE BLANC) */
.hero-overlay {
  position: absolute;
  inset: 0;
  display: flex;
  align-items: flex-end;
  padding: 32px 20px 48px;
  background: linear-gradient(
    to top,
    rgba(0, 0, 0, 0.65) 20%,
    rgba(0, 0, 0, 0.4) 45%,
    rgba(0, 0, 0, 0.15) 70%,
    transparent 100%
  );
  z-index: 10;
}

.hero-content {
  max-width: 620px;
}

.hero-title {
  color: #fff;
  font-size: 32px;
  line-height: 1.1;
  margin-bottom: 10px;
}

.hero-subtitle {
  color: rgba(255, 255, 255, 0.9);
  font-size: 15px;
  margin-bottom: 18px;
}

.hero-btns {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.hero-btns a {
  width: 100%;
  text-align: center;
}

/* ========================= */
/*         POURQUOI          */
/* ========================= */

#pourquoi {
  padding: var(--section-padding-y) var(--section-padding-x);
}

.why-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 28px;
}

.why-card {
  background: #fff;
  padding: 25px;
  border-radius: 12px;
  box-shadow: 0 4px 18px rgba(0, 0, 0, 0.06);
  transition: transform 0.3s ease;
}

.why-card:hover {
  transform: translateY(-4px);
}

/* ========================= */
/*        AVANT / APRÈS      */
/* ========================= */

#avant-apres {
  background: var(--color-secondary-bg);
  padding: var(--section-padding-y) var(--section-padding-x);
}

.ba-gallery-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 25px;
}

.ba-gallery-card {
  background: #fff;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.08);
}

.ba-image-container {
  position: relative;
  height: 260px;
  overflow: hidden;
}

.ba-image-container img {
  position: absolute;
  top: 0;
  width: 50%;
  height: 100%;
  object-fit: cover;
}

.img-before { left: 0; }
.img-after { right: 0; }

@media (min-width: 769px) {
  .ba-gallery-card:hover .img-before {
    transform: translateX(-100%);
    transition: 0.5s;
  }
  .ba-gallery-card:hover .img-after {
    width: 100%;
    transition: 0.5s;
  }
}

/* Mobile : focus sur le résultat */
@media (max-width: 768px) {
  .img-before { display: none; }
  .img-after { width: 100%; left: 0; }
}

.ba-card-info {
  text-align: center;
  padding: 15px;
}

.ba-card-info h3 {
  font-size: 18px;
  font-weight: 700;
}

/* ========================= */
/*          CONTACT          */
/* ========================= */

#contact {
  text-align: center;
  padding: var(--section-padding-y) var(--section-padding-x);
}

.contact-text {
  max-width: 600px;
  margin: 0 auto 25px;
  opacity: 0.85;
}

.contact-actions {
  display: flex;
  justify-content: center;
  gap: 14px;
  flex-wrap: wrap;
}

/* ========================= */
/*        RESPONSIVE         */
/* ========================= */

@media (min-width: 768px) {
  #hero {
    height: 95vh;
  }

  .hero-overlay {
    align-items: center;
    padding: 80px;
  }

  .hero-title {
    font-size: 44px;
  }

  .hero-subtitle {
    font-size: 18px;
  }

  .hero-btns {
    flex-direction: row;
  }

  .hero-btns a {
    width: auto;
  }
}

@media (max-width: 768px) {
  .why-grid {
    grid-template-columns: 1fr;
  }

  .ba-image-container {
    height: 240px;
  }
}

@media (max-width: 480px) {
  .hero-title {
    font-size: 26px;
  }
}
</style>

<!-- =========================== -->
<!--            HERO             -->
<!-- =========================== -->

<section id="hero">
  <div class="hero-slider">

    <div class="hero-overlay">
      <div class="hero-content">
        <h1 class="hero-title">
          Le blanchiment dentaire professionnel pour un sourire éclatant.
        </h1>

        <p class="hero-subtitle">
          Révélez votre sourire le plus lumineux avec un soin sûr, rapide et efficace dès la première séance.
        </p>

        <div class="hero-btns">
          <a href="#contact" class="btn-primary">Prendre rendez-vous</a>
          <a href="#avant-apres" class="btn-ghost">Voir nos résultats</a>
        </div>
      </div>
    </div>

    {heroSlides.map((img, index) => (
      <div class={`hero-slide ${index === 0 ? "active" : ""}`}>
        <img src={img} alt="Sourire éclatant" />
      </div>
    ))}
  </div>
</section>

<!-- =========================== -->
<!--          POURQUOI           -->
<!-- =========================== -->

<section id="pourquoi">
  <div class="section-inner">
    <h2 class="section-title">L'excellence au service de votre sourire</h2>
    <p class="section-sub">
      Une approche professionnelle, douce et efficace pour un résultat visible et durable.
    </p>

    <div class="why-grid">
      <div class="why-card">
        <h3>Sûreté & douceur</h3>
        Produits premium conçus pour les dents sensibles.
      </div>
      <div class="why-card">
        <h3>Expertise professionnelle</h3>
        Protocoles maîtrisés et résultats homogènes.
      </div>
      <div class="why-card">
        <h3>Résultats immédiats</h3>
        Jusqu’à 8 teintes de gain dès la première séance.
      </div>
    </div>
  </div>
</section>

<!-- =========================== -->
<!--        AVANT / APRÈS        -->
<!-- =========================== -->

<section id="avant-apres">
  <div class="section-inner">
    <h2 class="section-title">Nos transformations</h2>
    <p class="section-sub">Découvrez la différence Shine Clinic.</p>

    <div class="ba-gallery-grid">
      {beforeAfterPairs.map((pair) => (
        <div class="ba-gallery-card">
          <div class="ba-image-container">
            <img src={pair.before} class="img-before" alt="Avant" />
            <img src={pair.after} class="img-after" alt="Après" />
          </div>
          <div class="ba-card-info">
            <h3>Résultat garanti</h3>
            <p>{pair.desc}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<!-- =========================== -->
<!--           CONTACT           -->
<!-- =========================== -->

<section id="contact">
  <div class="section-inner">
    <h2 class="section-title">Réservez votre moment Shine</h2>
    <p class="contact-text">
      Réservez en ligne ou contactez-nous directement.
    </p>

    <div class="contact-actions">
      <a
        href="https://calendly.com/shineclinic/seance-de-blanchiment-dentaire"
        target="_blank"
        class="btn-primary"
      >
        Réserver en ligne
      </a>
      <a
        href="https://www.instagram.com/shine_clinic_instagram/"
        target="_blank"
        class="btn-ghost"
      >
        Nous écrire sur Instagram
      </a>
    </div>
  </div>
</section>

<script is:inline>
  const slides = document.querySelectorAll(".hero-slide");
  let idx = 0;

  setInterval(() => {
    slides[idx].classList.remove("active");
    idx = (idx + 1) % slides.length;
    slides[idx].classList.add("active");
  }, 6000);
</script>

</Layout>






