---
// src/pages/index.astro
import Layout from "../layouts/Layout.astro";

const heroSlides = ["/sous.jpg", "/sous1.jpg", "/sous2.jpg"];

const beforeAfterPairs = [
  { before: "/before1a.jpg", after: "/after1a.jpg", desc: "Traitement standard (30 min)" },
  { before: "/before2b.jpg", after: "/after2b.jpg", desc: "Traitement intensif (60 min)" },
];
---

<Layout title="Shine Clinic – Accueil">

<style>
/* ================= TITRES ================= */

.section-title {
  font-size: 38px;
  font-weight: 700;
  text-align: center;
  margin-bottom: 10px;
}

.section-sub {
  text-align: center;
  font-size: 17px;
  max-width: 760px;
  margin: 0 auto 45px;
  opacity: 0.85;
}

/* ================= HERO ================= */

#hero {
  position: relative;
  height: 85vh;
  min-height: 520px;
  overflow: hidden;
}

.hero-slider {
  position: absolute;
  inset: 0;
}

.hero-slide {
  position: absolute;
  inset: 0;
  opacity: 0;
  transition: opacity 0.8s ease;
}

.hero-slide.active {
  opacity: 1;
}

.hero-slide img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.hero-overlay {
  position: absolute;
  inset: 0;
  display: flex;
  align-items: flex-end;
  padding: 32px 20px 48px;
  background: linear-gradient(
    to top,
    rgba(0,0,0,0.65) 20%,
    rgba(0,0,0,0.35) 45%,
    rgba(0,0,0,0.1) 70%,
    transparent 100%
  );
  z-index: 10;
}

.hero-content {
  max-width: 600px;
}

.hero-title {
  color: white;
  font-size: 32px;
  line-height: 1.1;
  margin-bottom: 10px;
}

.hero-subtitle {
  color: rgba(255,255,255,0.9);
  font-size: 15px;
  margin-bottom: 18px;
}

.hero-btns {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.hero-btns a {
  width: 100%;
  text-align: center;
}

/* Desktop hero */
@media (min-width: 768px) {
  #hero {
    height: 90vh;
  }

  .hero-overlay {
    align-items: center;
    padding: 80px;
  }

  .hero-title {
    font-size: 44px;
  }

  .hero-subtitle {
    font-size: 18px;
  }

  .hero-btns {
    flex-direction: row;
  }

  .hero-btns a {
    width: auto;
  }
}

/* ================= POURQUOI ================= */

#pourquoi {
  padding: var(--section-padding-y) var(--section-padding-x);
}

.why-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 26px;
}

.why-card {
  background: white;
  padding: 24px;
  border-radius: 12px;
  box-shadow: 0 4px 18px rgba(0,0,0,0.06);
}

/* Mobile */
@media (max-width: 768px) {
  .why-grid {
    grid-template-columns: 1fr;
  }
}

/* ================= AVANT / APRÈS ================= */

#avant-apres {
  background: var(--color-secondary-bg);
  padding: var(--section-padding-y) var(--section-padding-x);
}

.ba-gallery-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 24px;
}

/* Card */
.ba-gallery-card {
  background: white;
  border-radius: 14px;
  overflow: hidden;
  box-shadow: 0 8px 25px rgba(0,0,0,0.08);
}

/* Image container */
.ba-image-container {
  position: relative;
  height: 260px;
  overflow: hidden;
}

/* Images */
.ba-image-container img {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  opacity: 0;
  transition: opacity 0.4s ease;
}

.ba-image-container img.active {
  opacity: 1;
}

/* Bouton mobile */
.ba-toggle {
  position: absolute;
  bottom: 12px;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(0,0,0,0.75);
  color: white;
  border: none;
  padding: 8px 16px;
  font-size: 14px;
  border-radius: 20px;
  cursor: pointer;
}

/* Desktop hover */
@media (min-width: 769px) {
  .ba-toggle {
    display: none;
  }

  .ba-image-container img {
    opacity: 1;
    width: 50%;
  }

  .img-before { left: 0; }
  .img-after { right: 0; }

  .ba-gallery-card:hover .img-before {
    transform: translateX(-100%);
    transition: 0.5s;
  }

  .ba-gallery-card:hover .img-after {
    width: 100%;
    transition: 0.5s;
  }
}

.ba-card-info {
  text-align: center;
  padding: 14px;
}

.ba-card-info h3 {
  font-size: 17px;
  font-weight: 700;
}

/* ================= CONTACT ================= */

#contact {
  padding: var(--section-padding-y) var(--section-padding-x);
  text-align: center;
}

.contact-text {
  max-width: 600px;
  margin: 0 auto 25px;
}

.contact-actions {
  display: flex;
  gap: 14px;
  justify-content: center;
  flex-wrap: wrap;
}
</style>

<!-- HERO -->
<section id="hero">
  <div class="hero-slider">
    <div class="hero-overlay">
      <div class="hero-content">
        <h1 class="hero-title">
          Le blanchiment dentaire professionnel pour un sourire éclatant.
        </h1>
        <p class="hero-subtitle">
          Révélez votre sourire le plus lumineux dès la première séance.
        </p>
        <div class="hero-btns">
          <a href="#contact" class="btn-primary">Prendre rendez-vous</a>
          <a href="#avant-apres" class="btn-ghost">Voir nos résultats</a>
        </div>
      </div>
    </div>

    {heroSlides.map((img, index) => (
      <div class={`hero-slide ${index === 0 ? "active" : ""}`}>
        <img src={img} alt="Sourire éclatant" />
      </div>
    ))}
  </div>
</section>

<!-- POURQUOI -->
<section id="pourquoi">
  <div class="section-inner">
    <h2 class="section-title">L'excellence au service de votre sourire</h2>
    <p class="section-sub">
      Des soins professionnels, sûrs et efficaces.
    </p>

    <div class="why-grid">
      <div class="why-card">Sûreté & douceur</div>
      <div class="why-card">Expertise professionnelle</div>
      <div class="why-card">Résultats visibles immédiatement</div>
    </div>
  </div>
</section>

<!-- AVANT / APRÈS -->
<section id="avant-apres">
  <div class="section-inner">
    <h2 class="section-title">Nos transformations</h2>
    <p class="section-sub">Comparez avant et après nos soins.</p>

    <div class="ba-gallery-grid">
      {beforeAfterPairs.map(pair => (
        <div class="ba-gallery-card">
          <div class="ba-image-container">
            <img src={pair.after} class="img-after active" alt="Après" />
            <img src={pair.before} class="img-before" alt="Avant" />
            <button class="ba-toggle">Voir l’avant</button>
          </div>
          <div class="ba-card-info">
            <h3>Résultat garanti</h3>
            <p>{pair.desc}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<!-- CONTACT -->
<section id="contact">
  <div class="section-inner">
    <h2 class="section-title">Réservez votre moment Shine</h2>
    <p class="contact-text">Réservation en ligne ou message direct.</p>

    <div class="contact-actions">
      <a href="https://calendly.com/shineclinic/seance-de-blanchiment-dentaire" target="_blank" class="btn-primary">
        Réserver en ligne
      </a>
      <a href="https://www.instagram.com/shine_clinic_instagram/" target="_blank" class="btn-ghost">
        Instagram
      </a>
    </div>
  </div>
</section>

<script is:inline>
/* Hero slider */
const slides = document.querySelectorAll(".hero-slide");
let idx = 0;
setInterval(() => {
  slides[idx].classList.remove("active");
  idx = (idx + 1) % slides.length;
  slides[idx].classList.add("active");
}, 6000);

/* Avant / Après mobile toggle */
document.querySelectorAll(".ba-gallery-card").forEach(card => {
  const btn = card.querySelector(".ba-toggle");
  const before = card.querySelector(".img-before");
  const after = card.querySelector(".img-after");

  btn.addEventListener("click", () => {
    const showingAfter = after.classList.contains("active");
    after.classList.toggle("active");
    before.classList.toggle("active");
    btn.textContent = showingAfter ? "Voir l’après" : "Voir l’avant";
  });
});
</script>

</Layout>





