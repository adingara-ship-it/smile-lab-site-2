---
// src/pages/index.astro
import Layout from "../layouts/Layout.astro";
---

<Layout
  title="Shine Clinic – Blanchiment dentaire professionnel"
  description="Blanchiment dentaire professionnel, sûr et efficace. Révélez l’éclat naturel de votre sourire avec Shine Clinic."
>

<style>
/* ================= GLOBAL TITLES ================= */

.section {
  padding: var(--section-padding-y) 0;
}

.section-title {
  font-size: 32px;
  font-weight: 600;
  text-align: center;
  margin-bottom: 12px;
}

.section-sub {
  font-size: 16px;
  text-align: center;
  max-width: 600px;
  margin: 0 auto 40px;
  color: var(--color-text-light);
}

/* ================= HERO (MOBILE-FIRST) ================= */

#hero {
  position: relative;
  min-height: 90vh;
  display: flex;
  align-items: flex-end;
  background: #000;
}

.hero-image {
  position: absolute;
  inset: 0;
}

.hero-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.hero-overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(
    to top,
    rgba(0,0,0,0.75) 30%,
    rgba(0,0,0,0.45) 60%,
    transparent 100%
  );
}

.hero-content {
  position: relative;
  z-index: 2;
  padding: 32px var(--section-padding-x) 48px;
  max-width: 520px;
}

.hero-title {
  color: white;
  font-size: 28px;
  line-height: 1.15;
  margin-bottom: 14px;
  font-weight: 600;
}

.hero-subtitle {
  color: rgba(255,255,255,0.9);
  font-size: 15px;
  margin-bottom: 26px;
}

.hero-content .btn-primary {
  width: 100%;
  text-align: center;
}

/* ================= POURQUOI ================= */

#pourquoi {
  background: white;
}

.why-list {
  display: flex;
  flex-direction: column;
  gap: 22px;
  max-width: 700px;
  margin: 0 auto;
}

.why-item {
  background: var(--color-secondary-bg);
  padding: 22px;
  border-radius: 14px;
  font-size: 16px;
  font-weight: 500;
  text-align: center;
}

/* ================= AVANT / APRÈS (MOBILE SIMPLE) ================= */

#avant-apres {
  background: var(--color-secondary-bg);
}

.ba-grid {
  display: flex;
  flex-direction: column;
  gap: 28px;
  max-width: 700px;
  margin: 0 auto;
}

.ba-card {
  background: white;
  border-radius: 16px;
  overflow: hidden;
  box-shadow: 0 10px 30px rgba(0,0,0,0.08);
}

.ba-image {
  position: relative;
  height: 260px;
}

.ba-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.ba-info {
  padding: 18px;
  text-align: center;
}

.ba-info h3 {
  font-size: 16px;
  margin-bottom: 4px;
}

.ba-info p {
  font-size: 14px;
  color: var(--color-primary);
}

/* ================= CONTACT ================= */

#contact {
  background: white;
}

.contact-actions {
  display: flex;
  flex-direction: column;
  gap: 14px;
  align-items: center;
}

.contact-actions a {
  width: 100%;
  max-width: 280px;
  text-align: center;
}

/* ================= DESKTOP ENRICHMENT ================= */

@media (min-width: 900px) {

  /* HERO */
  #hero {
    min-height: 95vh;
    align-items: center;
  }

  .hero-content {
    padding: 0;
    margin-left: var(--section-padding-x);
  }

  .hero-title {
    font-size: 52px;
  }

  .hero-subtitle {
    font-size: 18px;
    max-width: 420px;
  }

  .hero-content .btn-primary {
    width: auto;
  }

  /* POURQUOI */
  .why-list {
    flex-direction: row;
    gap: 30px;
  }

  .why-item {
    flex: 1;
    text-align: left;
  }

  /* AVANT / APRÈS */
  .ba-grid {
    flex-direction: row;
    gap: 30px;
  }

  .ba-card {
    flex: 1;
  }

  /* CONTACT */
  .contact-actions {
    flex-direction: row;
    justify-content: center;
  }
}
</style>

<!-- HERO -->
<section id="hero">
  <div class="hero-image">
    <img src="/sous.jpg" alt="Blanchiment dentaire professionnel" />
  </div>
  <div class="hero-overlay"></div>

  <div class="hero-content">
    <h1 class="hero-title">
      Le blanchiment dentaire professionnel, en toute confiance.
    </h1>
    <p class="hero-subtitle">
      Un soin sûr, rapide et efficace pour révéler l’éclat naturel de votre sourire.
    </p>
    <a href="#contact" class="btn-primary">
      Prendre rendez-vous
    </a>
  </div>
</section>

<!-- POURQUOI -->
<section id="pourquoi" class="section">
  <div class="section-inner">
    <h2 class="section-title">Pourquoi Shine Clinic</h2>
    <p class="section-sub">
      Des soins pensés pour votre confort, votre sécurité et des résultats visibles.
    </p>

    <div class="why-list">
      <div class="why-item">Protocole sûr et respectueux de l’émail</div>
      <div class="why-item">Résultats visibles dès la première séance</div>
      <div class="why-item">Accompagnement professionnel et personnalisé</div>
    </div>
  </div>
</section>

<!-- AVANT / APRÈS -->
<section id="avant-apres" class="section">
  <div class="section-inner">
    <h2 class="section-title">Résultats réels</h2>
    <p class="section-sub">
      Quelques exemples de transformations après nos soins.
    </p>

    <div class="ba-grid">
      <div class="ba-card">
        <div class="ba-image">
          <img src="/after1a.jpg" alt="Résultat blanchiment dentaire" />
        </div>
        <div class="ba-info">
          <h3>Soin standard</h3>
          <p>30 minutes</p>
        </div>
      </div>

      <div class="ba-card">
        <div class="ba-image">
          <img src="/after2b.jpg" alt="Résultat blanchiment intensif" />
        </div>
        <div class="ba-info">
          <h3>Soin intensif</h3>
          <p>60 minutes</p>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- CONTACT -->
<section id="contact" class="section">
  <div class="section-inner">
    <h2 class="section-title">Réservez votre séance</h2>
    <p class="section-sub">
      Prenez rendez-vous en ligne ou contactez-nous directement.
    </p>

    <div class="contact-actions">
      <a
        href="https://calendly.com/shineclinic/seance-de-blanchiment-dentaire"
        target="_blank"
        class="btn-primary"
      >
        Réserver en ligne
      </a>

      <a
        href="https://www.instagram.com/shine_clinic_instagram/"
        target="_blank"
        class="btn-ghost"
        style="color: var(--color-primary); border-color: var(--color-primary);"
      >
        Nous écrire sur Instagram
      </a>
    </div>
  </div>
</section>

</Layout>





