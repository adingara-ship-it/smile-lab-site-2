---
// src/layouts/Layout.astro
const { title = "Shine Clinic", description = "Esthétique dentaire premium" } = Astro.props;
const logo = "/logo.png"; 

const navLinks = [
    { href: "/", label: "Accueil" },
    { href: "/tarifs", label: "Tarifs" },
    { href: "/#avant-apres", label: "Résultats" },
    { href: "/#contact", label: "Rendez-vous" } 
];
---
<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" /> 
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" href="/favicon.svg" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="stylesheet" href="https://api.fontshare.com/v2/css?f[]=neue-montreal@400,500,600,700&display=swap">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet" />
    <slot name="head" /> 
  </head>

  <body>
    
    <style is:global>

      :root {
        --color-bg: #FFFFFF;
        --color-primary: #3C73FF;
        --color-secondary-bg: #EEF4FF;
        --color-text-title: #0D0D0F;
        --color-text-body: #333333;
        --color-text-light: #7E8899;

        --max-width: 1200px;
        --section-padding-y: 6rem;
        --section-padding-x: 1.5rem;
      }

      * { margin: 0; padding: 0; box-sizing: border-box; }
      html { scroll-behavior: smooth; }
      
      body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        background: var(--color-bg);
        color: var(--color-text-body);
        font-family: 'Neue Montreal', 'Inter', sans-serif;
        line-height: 1.7;
      }

      a { text-decoration: none; color: inherit; }

      h1, h2, h3, h4 {
        font-family: 'Neue Montreal', sans-serif;
        color: var(--color-text-title);
        line-height: 1.2;
      }

      main { 
        width: 100%;
        flex-grow: 1;
      }

      .section-inner {
        max-width: var(--max-width);
        margin: 0 auto;
        padding: 0 var(--section-padding-x);
      }

      .section-padded {
        padding: var(--section-padding-y) 0;
      }

      /* BUTTONS */
      .btn-primary, .btn-ghost {
        display: inline-block;
        padding: 0.8rem 2rem;
        border-radius: 8px;
        font-weight: 600;
        font-size: 1rem;
        cursor: pointer;
        transition: 0.3s ease;
      }

      .btn-primary {
        background-color: var(--color-primary);
        color: var(--color-bg);
      }
      .btn-primary:hover {
        background-color: #2F61D4;
        box-shadow: 0 4px 10px rgba(60, 115, 255, 0.4);
        transform: translateY(-2px);
      }

      .btn-ghost {
        border: 2px solid var(--color-primary);
        color: var(--color-primary);
      }
      .btn-ghost:hover {
        background-color: var(--color-secondary-bg);
      }

      /* HEADER */
      header {
        position: sticky; top: 0; z-index: 100;
        background: var(--color-bg);
        border-bottom: 1px solid var(--color-secondary-bg);
      }

      .topbar {
        max-width: var(--max-width);
        margin: 0 auto;
        padding: 16px var(--section-padding-x);
        display: flex;
        align-items: center;
      }

      .logo-wrap img {
        height: 70px;
        width: auto;
        transition: 0.3s;
      }

      nav.main-nav {
        margin-left: auto;
        display: flex;
        gap: 25px;
        font-weight: 500;
      }

      nav.main-nav a {
        padding-bottom: 5px;
        position: relative;
      }

      nav.main-nav a:hover { color: var(--color-primary); }

      nav.main-nav a::after {
        content: "";
        width: 0;
        height: 3px;
        position: absolute;
        left: 0; bottom: 0;
        background: var(--color-primary);
        transition: 0.2s;
      }

      nav.main-nav a:hover::after { width: 100%; }

      /* MOBILE MENU */
      .menu-toggle { 
        display: none; 
        margin-left: auto;
        background: none; 
        border: none; 
        cursor: pointer; 
      }

      .bar { 
        width: 26px; height: 3px; 
        margin: 5px 0; 
        background: var(--color-primary); 
      }

      .main-nav-mobile {
        position: fixed; 
        top: 90px; left: 0; 
        width: 100%; height: calc(100vh - 90px);
        background: var(--color-bg);
        display: none;
        flex-direction: column;
        align-items: center;
        padding-top: 30px;
        transition: transform 0.3s ease-out;
        transform: translateX(100%);
      }

      body.menu-open .main-nav-mobile {
        display: flex;
        transform: translateX(0);
      }

      .main-nav-mobile a {
        margin: 15px 0;
        font-size: 20px;
        font-weight: 600;
      }

      /* FOOTER */
      footer {
        background: var(--color-text-title);
        padding: 40px var(--section-padding-x);
        text-align: center;
        color: white;
      }

      .footer-logo img {
        height: 40px;
        filter: brightness(0) invert(1);
      }


      /* RESPONSIVE RULES */
      @media (max-width: 900px) {
        nav.main-nav { display: none; }
        .menu-toggle { display: block; }
        .logo-wrap img { height: 55px; }
      }

      @media (max-width: 768px) {

        :root {
          --section-padding-y: 3.5rem;
          --section-padding-x: 1rem;
        }

        h1 { font-size: 36px !important; }
        h2 { font-size: 28px !important; }
        h3 { font-size: 20px !important; }

        .contact-actions { flex-direction: column; gap: 12px; }
      }

    </style>

    <header id="main-header">
      <div class="topbar">

        <a href="/" class="logo-wrap">
          <img src={logo} alt="Shine Clinic Logo" />
        </a>

        <nav class="main-nav">
          {navLinks.map(link => (
            <a href={link.href}>{link.label}</a>
          ))}
        </nav>

        <button class="menu-toggle">
          <span class="bar"></span>
          <span class="bar"></span>
          <span class="bar"></span>
        </button>

        <nav class="main-nav-mobile">
          {navLinks.map(link => (
            <a href={link.href}>{link.label}</a>
          ))}
        </nav>

      </div>
    </header>

    <main>
      <slot />
    </main>

    <footer>
      <div class="footer-inner">
        <div class="footer-logo">
          <img src={logo} alt="" />
        </div>
        <p>Shine Clinic Esthétique Dentaire Premium.</p>
        <div class="footer-links">
          <a target="_blank" href="https://www.instagram.com/shine_clinic_instagram/">Instagram</a>
          <a href="/mentions-legales">Mentions Légales</a>
        </div>
        <p>© {new Date().getFullYear()} Shine Clinic — Tous droits réservés</p>
      </div>
    </footer>


    <script is:inline>
      const menuToggle = document.querySelector(".menu-toggle");
      const body = document.body;

      menuToggle?.addEventListener("click", () => {
        body.classList.toggle("menu-open");
      });
    </script>

  </body>
</html>
