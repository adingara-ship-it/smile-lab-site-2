---
const {
  title = "Shine Clinic",
  description = "Esthétique dentaire premium",
} = Astro.props;

const logo = "/logo.png";

const navLinks = [
  { href: "/", label: "Accueil" },
  { href: "/tarifs", label: "Tarifs" },
  { href: "/#avant-apres", label: "Résultats" },
  { href: "/#contact", label: "Rendez-vous" },
];
---

<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" href="/favicon.svg" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="stylesheet"
      href="https://api.fontshare.com/v2/css?f[]=neue-montreal@400,500,600,700&display=swap"
    />

    <slot name="head" />
  </head>

  <body>
    <style is:global>
      /* ================== BASE ================== */

      :root {
        --color-bg: #ffffff;
        --color-primary: #3c73ff;
        --color-secondary-bg: #eef4ff;
        --color-text-title: #0d0d0f;
        --color-text-body: #333;
        --color-text-light: #7e8899;

        --max-width: 1200px;
        --section-padding-x: 1.5rem;
        --section-padding-y: 6rem;
      }

      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      body {
        font-family: "Neue Montreal", sans-serif;
        background: var(--color-bg);
        color: var(--color-text-body);
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }

      a {
        color: inherit;
        text-decoration: none;
      }

      main {
        flex: 1;
      }

      .section-inner {
        max-width: var(--max-width);
        margin: 0 auto;
        padding: 0 var(--section-padding-x);
      }

      /* ================== HEADER ================== */

      header {
        position: sticky;
        top: 0;
        z-index: 9999;
        background: white;
        border-bottom: 1px solid var(--color-secondary-bg);
      }

      .topbar {
        max-width: var(--max-width);
        margin: 0 auto;
        padding: 16px var(--section-padding-x);
        display: flex;
        align-items: center;
        justify-content: space-between;
      }

      .logo-wrap img {
        height: 56px;
      }

      /* Desktop nav */
      nav.main-nav {
        display: flex;
        gap: 24px;
        font-weight: 500;
      }

      nav.main-nav a {
        position: relative;
      }

      nav.main-nav a::after {
        content: "";
        position: absolute;
        left: 0;
        bottom: -6px;
        width: 0;
        height: 3px;
        background: var(--color-primary);
        transition: 0.2s;
      }

      nav.main-nav a:hover::after {
        width: 100%;
      }

      /* ================== HAMBURGER ================== */

      .menu-toggle {
        display: none;
        background: none;
        border: none;
        cursor: pointer;
        z-index: 10000;
      }

      .menu-toggle .bar {
        display: block;
        width: 26px;
        height: 3px;
        background: #000;
        margin: 5px 0;
        border-radius: 2px;
      }

      /* ================== MOBILE MENU ================== */

      .mobile-nav {
        position: fixed;
        inset: 0;
        background: white;
        z-index: 9000;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 24px;
        transform: translateX(100%);
        transition: transform 0.3s ease;
      }

      body.menu-open .mobile-nav {
        transform: translateX(0);
      }

      .mobile-nav a {
        font-size: 22px;
        font-weight: 600;
      }

      /* ================== BUTTONS ================== */

      .btn-primary,
      .btn-ghost {
        display: inline-block;
        padding: 0.75rem 2rem;
        border-radius: 8px;
        font-weight: 600;
        transition: 0.3s;
      }

      .btn-primary {
        background: var(--color-primary);
        color: white;
      }

      .btn-primary:hover {
        background: #2f61d4;
      }

      .btn-ghost {
        border: 2px solid var(--color-primary);
        color: var(--color-primary);
      }

      .btn-ghost:hover {
        background: var(--color-secondary-bg);
      }

      /* ================== FOOTER ================== */

      footer {
        background: #0d0d0f;
        color: white;
        padding: 50px 20px;
        text-align: center;
      }

      footer img {
        height: 40px;
        filter: brightness(0) invert(1);
        margin-bottom: 12px;
      }

      /* ================== RESPONSIVE ================== */

      @media (max-width: 900px) {
        nav.main-nav {
          display: none;
        }

        .menu-toggle {
          display: block;
        }
      }
    </style>

    <!-- HEADER -->
    <header>
      <div class="topbar">
        <a href="/" class="logo-wrap">
          <img src={logo} alt="Shine Clinic" />
        </a>

        <nav class="main-nav">
          {navLinks.map((link) => (
            <a href={link.href}>{link.label}</a>
          ))}
        </nav>

        <button class="menu-toggle" aria-label="Ouvrir le menu">
          <span class="bar"></span>
          <span class="bar"></span>
          <span class="bar"></span>
        </button>
      </div>
    </header>

    <!-- MOBILE NAV -->
    <nav class="mobile-nav">
      {navLinks.map((link) => (
        <a href={link.href}>{link.label}</a>
      ))}
    </nav>

    <main>
      <slot />
    </main>

    <footer>
      <img src={logo} alt="Shine Clinic" />
      <p>© {new Date().getFullYear()} Shine Clinic — Tous droits réservés</p>
    </footer>

    <script is:inline>
      const toggle = document.querySelector(".menu-toggle");
      const body = document.body;
      const links = document.querySelectorAll(".mobile-nav a");

      toggle.addEventListener("click", () => {
        body.classList.toggle("menu-open");
      });

      links.forEach((link) =>
        link.addEventListener("click", () => {
          body.classList.remove("menu-open");
        })
      );
    </script>
  </body>
</html>
