---
// src/layouts/Layout.astro
const { title = "Shine Clinic", description = "Esthétique dentaire premium" } = Astro.props;
const logo = "/logo.png"; 

// TEXTES ACCENTUÉS CORRIGÉS
const navLinks = [
    { href: "/", label: "Accueil" },
    { href: "/tarifs", label: "Tarifs" },
    { href: "/#avant-apres", label: "Résultats" },
    { href: "/#contact", label: "Rendez-vous" } 
];
---

<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" /> <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" href="/favicon.svg" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="stylesheet" href="https://api.fontshare.com/v2/css?f[]=neue-montreal@400,500,600,700&display=swap">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet" />
    
    <slot name="head" /> 
  </head>

  <body>
    
    <style is:global>
      /* --- GLOBAL VARIABLES & BASE STYLES --- */
      :root {
        --color-bg: #FFFFFF; 
        --color-primary: #3C73FF; 
        --color-secondary-bg: #EEF4FF; 
        --color-text-title: #0D0D0F; 
        --color-text-body: #333333; 
        --color-text-light: #7E8899; 

        --max-width: 1200px;
        --section-padding-y: 6rem;
        --section-padding-x: 1.5rem;
      }

      * { margin: 0; padding: 0; box-sizing: border-box; }
      html { scroll-behavior: smooth; }
      
      /* Utiliser Flexbox sur le body pour forcer le footer en bas */
      body {
        display: flex;
        flex-direction: column; 
        background: var(--color-bg);
        color: var(--color-text-body);
        font-family: 'Neue Montreal', 'Inter', sans-serif;
        font-weight: 400;
        line-height: 1.7;
        min-height: 100vh; 
      }
      
      a { text-decoration: none; color: inherit; }

      h1, h2, h3, h4, h5, h6 {
        font-family: 'Neue Montreal', sans-serif;
        color: var(--color-text-title);
        letter-spacing: -0.02em;
        line-height: 1.2;
      }
      
      /* --- MAIN CONTENT & SECTION WRAPPERS --- */
      main { 
        width: 100%; 
        flex-grow: 1; 
      }
      .section-inner {
        max-width: var(--max-width);
        margin: 0 auto;
        padding: 0 var(--section-padding-x);
      }
      .section-padded {
          padding: var(--section-padding-y) 0;
      }

      /* --- BUTTON STYLES --- */
      .btn-primary, .btn-ghost {
          display: inline-block;
          padding: 0.8rem 2rem;
          border-radius: 8px;
          font-weight: 600;
          font-size: 1rem;
          cursor: pointer;
          transition: all 0.3s ease;
      }
      
      .btn-primary {
          background-color: var(--color-primary);
          color: var(--color-bg);
          border: none;
      }
      .btn-primary:hover {
          background-color: #2F61D4;
          transform: translateY(-1px);
          box-shadow: 0 4px 10px rgba(60, 115, 255, 0.4); 
      }

      .btn-ghost {
          background-color: transparent;
          color: var(--color-primary); 
          border: 2px solid var(--color-primary);
      }
      .btn-ghost:hover {
          background-color: var(--color-secondary-bg); 
          transform: translateY(-1px);
      }
      
      /* --- HEADER STYLES & ANIMATIONS --- */
      header {
          position: sticky; top: 0; z-index: 100; background: var(--color-bg); 
          border-bottom: 1px solid var(--color-secondary-bg); transition: padding 0.3s ease; 
      }
      .topbar {
          max-width: var(--max-width); margin: 0 auto; padding: 16px var(--section-padding-x); 
          display: flex; align-items: center; justify-content: space-between;
      }
      .logo-wrap img { height: 70px; width: auto; transition: transform 0.3s ease; }
      .logo-wrap:hover img { transform: scale(1.03); }
      header.is-sticky { padding: 0; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05); }
      header.is-sticky .topbar { padding-top: 10px; padding-bottom: 10px; }
      header.is-sticky .logo-wrap img { height: 55px; }
      nav.main-nav { display: flex; gap: 25px; font-size: 16px; font-weight: 500; }
      nav a { position: relative; padding-bottom: 5px; color: var(--color-text-body); }
      nav a:hover { color: var(--color-primary); }
      nav a::after {
          content: ""; position: absolute; width: 0; left: 0; bottom: 0; height: 3px;
          background: var(--color-primary); transition: 0.2s; border-radius: 2px;
      }
      nav a:hover::after { width: 100%; }
      
      /* --- FOOTER STYLES --- */
      footer {
          background: var(--color-text-title); 
          padding: 50px var(--section-padding-x);
          text-align: center;
          color: white;
      }
      .footer-inner {
          max-width: var(--max-width);
          margin: 0 auto;
      }
      .footer-logo img { 
          height: 40px; 
          filter: brightness(0) invert(1); 
          margin-bottom: 15px;
      }
      .footer-links a { 
          color: var(--color-primary); 
          font-weight: 500;
          transition: opacity 0.3s;
          padding: 0 10px;
          border-right: 1px solid rgba(255, 255, 255, 0.2);
      }
      .footer-links a:last-child {
          border-right: none;
      }
      .footer-links {
          margin: 15px 0;
      }
      .footer-madeby {
          color: var(--color-text-light);
          font-size: 13px;
          opacity: 0.6;
          margin-top: 10px;
      }


      /* --- RESPONSIVE / HAMBURGER (Base) --- */
      .menu-toggle { display: none; padding: 10px; background: none; border: none; cursor: pointer; margin-left: auto; }
      .bar { display: block; width: 25px; height: 3px; margin: 5px 0; background-color: var(--color-primary); transition: 0.3s; }
      .main-nav-mobile {
          position: fixed; top: 102px; left: 0; width: 100%; height: 100vh; 
          background: var(--color-bg); flex-direction: column; align-items: center; padding-top: 40px; 
          transform: translateX(100%); transition: transform 0.3s ease-out; display: none; 
      }
      body.menu-open .main-nav-mobile { transform: translateX(0); display: flex; }
      
      /* --- RESPONSIVE GÉNÉRALE (Règles critiques) --- */
      @media (max-width: 900px) {
          /* Masque la navigation Desktop et affiche le bouton Hamburger */
          nav.main-nav { display: none; }
          .menu-toggle { display: block; }

          /* Diminue la taille du logo sur mobile/tablette */
          header.is-sticky .logo-wrap img { height: 45px; }
          .logo-wrap img { height: 60px; }
      }
      
      @media (max-width: 768px) {
          /* Diminution des paddings et marges générales */
          :root {
              --section-padding-y: 3.5rem; /* Rendre les sections moins hautes */
              --section-padding-x: 1rem; /* Padding minimum de 16px sur les côtés */
          }

          /* Les grilles forcées en colonne simple pour éviter le débordement */
          .pricing-grid, .why-grid, .ba-gallery-grid {
              grid-template-columns: 1fr;
          }

          /* Adaptation des gros titres pour ne pas dépasser la largeur de l'écran */
          h1, .hero-title { font-size: 38px !important; }
          h2, .section-title { font-size: 30px !important; }
          h3 { font-size: 18px !important; }

          .contact-actions {
              flex-direction: column; /* Empile les boutons */
              gap: 10px;
          }
      }
    </style>
    
    <header id="main-header">
      <div class="topbar">
        <a href="/" class="logo-wrap">
          <img src={logo} alt="Shine Clinic Logo" />
        </a>
        
        <nav class="main-nav">
            {navLinks.map(link => (
                <a href={link.href}>{link.label}</a>
            ))}
        </nav>
        
        <button class="menu-toggle" aria-label="Ouvrir le menu de navigation">
            <span class="bar"></span>
            <span class="bar"></span>
            <span class="bar"></span>
        </button>

        <nav class="main-nav-mobile">
            {navLinks.map(link => (
                <a href={link.href}>{link.label}</a>
            ))}
        </nav>
      </div>
    </header>

    <main>
      <slot />
    </main>

    <footer>
        <div class="footer-inner">
            <div class="footer-logo">
                <img src={logo} alt="Shine Clinic Logo" />
            </div>
            <p>
                Shine Clinic Esthétique Dentaire Premium.
            </p>
            <div class="footer-links">
                <a target="_blank" href="https://www.instagram.com/shine_clinic_instagram/">Instagram</a>
                <a href="/mentions-legales">Mentions Légales</a>
            </div>
            <p>© {new Date().getFullYear()} Shine Clinic — Tous droits réservés</p>
            
            <p class="footer-madeby">
                Conçu avec soin. Site créé par A&A web design.
            </p>
        </div>
    </footer>
    
    <script is:inline>
      // 1. Script Hamburger
      const menuToggle = document.querySelector(".menu-toggle");
      const mainNavMobile = document.querySelector(".main-nav-mobile");
      const body = document.body;
      if (menuToggle && mainNavMobile) {
          menuToggle.addEventListener("click", () => {
              body.classList.toggle("menu-open");
          });
          mainNavMobile.querySelectorAll("a").forEach(link => {
              link.addEventListener("click", () => {
                  body.classList.remove("menu-open");
              });
          });
      }

      // 2. Script Sticky Header
      const header = document.getElementById('main-header');
      window.addEventListener('scroll', () => {
          if (window.scrollY > 10) { 
              header.classList.add('is-sticky');
          } else {
              header.classList.remove('is-sticky');
          }
      });
    </script>
  </body>
</html>